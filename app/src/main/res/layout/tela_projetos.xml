<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/telaProj"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:background="#251F47"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="408dp"
        android:layout_height="283dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#251F47"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="50dp"
                android:id="@+id/imageProj"
                android:layout_width="158dp"
                android:layout_height="108dp"
                app:srcCompat="@drawable/logoazulclarinho" />

            <TextView
                android:layout_marginTop="50dp"
                android:id="@+id/nomeProj"
                android:layout_width="98dp"
                android:layout_height="107dp"
                android:text="Nome do Projeto"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <TextView
                android:layout_marginTop="50dp"
                android:id="@+id/custoProj"
                android:layout_width="77dp"
                android:layout_height="96dp"
                android:layout_marginLeft="10dp"
                android:text="15.000,00"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/descProj"
                android:layout_width="351dp"
                android:layout_height="81dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="180dp"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="@color/white" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>