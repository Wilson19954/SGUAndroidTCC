<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/telaEditar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#251F47"
    tools:context=".telas.EditarCadastro">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:text="Altere seu Perfil Aqui"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="5dp"
                android:text="NOME"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/etNome"
                android:layout_width="260dp"
                android:layout_height="38dp"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/rounded_corner"
                android:ems="10"
                android:hint="Nome"
                android:inputType="textPersonName"
                android:maxLength="30" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="5dp"
                android:text="EMAIL"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="260dp"
                android:layout_height="38dp"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/rounded_corner"
                android:ems="10"
                android:hint="example@gmail.com"
                android:inputType="textEmailAddress"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="61dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="5dp"
                android:text="SENHA"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/etSenha"
                android:layout_width="260dp"
                android:layout_height="38dp"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/rounded_corner"
                android:ems="10"
                android:hint="Senha"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="5dp"
                android:text="TIPO DE USUÁRIO"
                android:textColor="#FFFFFF"

                />

            <Spinner
                android:id="@+id/etTipoUser"
                android:layout_width="262dp"
                android:layout_height="40dp"
                android:layout_marginLeft="75dp"
                android:background="@drawable/rounded_corner"
                android:entries="@array/spnTipoCadastro" />

            <TextView
                android:id="@+id/Telefone"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="5dp"
                android:text="TELEFONE"
                android:textColor="#FFFFFF" />

            <com.santalu.maskara.widget.MaskEditText
                android:id="@+id/etTelefone"
                android:layout_width="260dp"
                android:layout_height="38dp"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/rounded_corner"
                android:ems="10"
                android:hint="(__)_____-____"
                android:inputType="phone"
                app:mask="(__)_____-____"
                app:maskCharacter="_"
                app:maskStyle="completable" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="5dp"
                android:text="ENDEREÇO"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/etEndereco"
                android:layout_width="260dp"
                android:layout_height="38dp"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/rounded_corner"
                android:ems="10"
                android:hint="Rua Um, Jd Dois"
                android:inputType="textPostalAddress" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="5dp"
                android:text="CPF"
                android:textColor="#FFFFFF" />

            <com.santalu.maskara.widget.MaskEditText
                android:id="@+id/etCpfcnpj"
                android:layout_width="260dp"
                android:layout_height="38dp"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/rounded_corner"
                android:ems="10"
                android:enabled="false"
                android:hint="___.___.___-__"
                android:inputType="number"
                android:textColor="@color/black"
                app:mask="___.___.___-__"
                app:maskCharacter="_"
                app:maskStyle="completable" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="127dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="5dp"
                android:text="BIO"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/etBio"
                android:layout_width="260dp"
                android:layout_height="120dp"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/rounded_corner"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Escreva aqui algo sobre você."
                android:inputType="textMultiLine"
                android:maxLength="60" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="197dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="149dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:layout_marginBottom="30dp"
                        android:layout_weight="1"
                        android:text="Escolha uma foto para o seu perfil"
                        android:textColor="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView

                            android:id="@+id/imgcamera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginBottom="20dp"
                            app:srcCompat="@android:drawable/ic_menu_camera" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:text="Tirar foto"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imggaleria"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            app:srcCompat="@android:drawable/ic_menu_gallery" />

                        <TextView
                            android:id="@+id/textView30"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:text="Escolher foto da galeria"
                            android:textColor="@color/white" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/imgFoto"
                android:layout_width="102dp"
                android:layout_height="68dp"
                android:layout_marginLeft="160dp"
                app:srcCompat="@android:drawable/ic_menu_gallery" />

            <Button
                android:id="@+id/btcriarconta"
                android:layout_width="155dp"
                android:layout_height="62dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:backgroundTint="#404E7C"
                android:text="Cadastrar"
                android:textColor="#FFFFFF"
                app:cornerRadius="10dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>